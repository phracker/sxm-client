{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SXM Client: Create Virtual Env",
            "type": "shell",
            "command": "python3 -m venv ${config:python.venvPath}/${workspaceFolderBasename} && ${config:python.venvPath}/${workspaceFolderBasename}/bin/pip install -U pip wheel",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "SXM Client: Python Setup",
            "type": "shell",
            "command": "${config:python.venvPath}/${workspaceFolderBasename}/bin/python setup.py develop",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": [
                "SXM Client: Create Virtual Env"
            ]
        },
        {
            "label": "SXM Client: Install Requirements",
            "type": "shell",
            "command": "${config:python.venvPath}/${workspaceFolderBasename}/bin/pip install -e \".[dev]\"",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": [
                "SXM Client: Python Setup"
            ]
        }
    ]
}
